@{
    ViewBag.Title = "EditProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN CONTENT -->
<div id="content" data-ng-app="AgileApp" data-ng-controller="AgileController">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-flag"></i>
                Edit Project
                <span>
                    >
                    Manage
                </span>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

        </div>
    </div>
    <div id="MessageArea" class="alert alert-block {{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>
    <section id="widget-grid" class="">
        <!-- START ROW -->
        <div class="row">
            <div class="col-md-12">
                <!-- NEW COL START -->
                <article class="col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-deletebutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-check"></i> </span>
                            <h2>Add New Project </h2>
                        </header>
                        <input type="hidden" value="@ViewBag.id" id="hdnfilename" />
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                <form id="project-form" class="smart-form" novalidate="novalidate">
                                    <div class="panel" ng-init="ShowProjectById()">
                                        <fieldset>
                                            <div class="row">

                                                <div class="col col-4">
                                                    <label for="name">Project Title</label>
                                                    <input type="text" class="form-control" ng-model="project.ProjectTitle" value="{{project.ProjectTitle}}" placeholder="Enter project title..." id="txtPName" />
                                                </div>
                                                <div class="col col-4">
                                                    <label for="contact">Start date</label>
                                                    <input type="text" class="form-control" ng-model="project.StartDateSt" placeholder="Enter start date..." id="datepicker" />
                                                </div>
                                                <div class="col col-4">
                                                    <label for="contact">End date</label>
                                                    <input type="text" class="form-control" ng-model="project.EndDateSt" placeholder="Enter end date..." id="datepickerEnd" />
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col col-4">
                                                    <label for="name">Demo Url</label><br />
                                                    <input type="text" class="form-control" ng-model="project.DemoUrl" placeholder="Enter demo url..." id="txtDemoUrl" />
                                                </div>
                                                <div class="col col-4">
                                                    <label for="name">Production Url</label><br />
                                                    <input type="text" class="form-control" ng-model="project.ProductionUrl" placeholder="Enter demo url..." id="txtProdUrl" />
                                                </div>
                                                <div class="col col-4">
                                                    <label for="contact">Deadline</label>
                                                    <input type="text" class="form-control" ng-model="project.DeadLineSt" placeholder="Enter deadline date..." id="datepickerDeadLine" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col col-4">
                                                    <label for="name">Bitbucket Url</label>
                                                    <input type="text" class="form-control" ng-model="project.BitBucketUrl" placeholder="Enter bitbucket url..." id="txtBitUrl" />
                                                </div>
                                                <div class="col col-4">
                                                    <label for="name">SVN</label>
                                                    <input type="text" class="form-control" ng-model="project.SVN" placeholder="Enter svn link..." id="txtSvn" />
                                                </div>
                                                <div class="col col-4">
                                                    <label for="contact">Client Information</label>
                                                    <input type="text" class="form-control" ng-model="project.ClientInfo" placeholder="Enter client information..." id="txtClntInfo" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col col-4">
                                                    <label for="name">Targeted </label>
                                                    <input type="number" max="100" min="0" class="form-control" ng-model="project.Targated" placeholder="Enter targeted..." id="txtTargeted" />
                                                </div>
                                                <div class="col col-4">
                                                    <label for="contact">Budget</label>
                                                    <input type="text" class="form-control" ng-model="project.Budget" placeholder="Enter project budget..." id="txtBudget" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col col-6">
                                                    <label for="name">Password</label>
                                                    <textarea rows="5" type="text" class="form-control custom-control" ng-model="project.ProjectPassword" placeholder="Enter project password..." id="txtPwd" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col col-lg-6">
                                                    <label for="name">Project Description</label>
                                                    <textarea class="form-control custom-control" rows="5" ng-model="project.Description" placeholder="Enter project description..." id="txtPDesc"></textarea>
                                                </div>
                                                <div class="col col-lg-6">
                                                    <label for="name">Information Tag</label>
                                                    <textarea class="form-control custom-control" rows="5" ng-model="project.ProjectTech" placeholder="Enter project description..." id="txtPDesc"></textarea>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col col-4">
                                                    <label for="name">Status</label><br />
                                                    <input type="radio" id="statusYes" width="200" ng-model="project.Status" checked="checked" name="grpStatus" value="True" />Yes
                                                    <input type="radio" id="statusNo" width="200" ng-model="project.Status" name="grpStatus" value="False" />No
                                                </div>
                                                <div class="col col-4">
                                                    <label for="name">Tracker</label><br />
                                                    <input type="radio" id="TrackerYes" width="200" ng-model="project.Tracker" checked name="grpTracker" value="True" />Yes
                                                    <input type="radio" id="TrackerNo" width="200" ng-model="project.Tracker" name="grpTracker" value="False" />No
                                                </div>
                                                <div class="col col-4">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    &nbsp;
                                                </div>
                                            </div>

                                        </fieldset>
                                        <footer>
                                            <button type="submit" data-ng-click="UpdateProject()" class="btn btn-primary">
                                                Update
                                            </button>
                                        </footer>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>
    </div>
    @section pagespecific {
        <script src="~/AgController/Projectjs.js"></script>
        <script type="text/javascript">

            $('#datepicker').datepicker().on('changeDate', function () {
                $(this).blur(); //Initialise any date pickers
            });
            $('#datepickerEnd').datepicker().on('changeDate', function () {
                $(this).blur(); //Initialise any date pickers
            });
            $('#datepickerDeadLine').datepicker().on('changeDate', function () {
                $(this).blur(); //Initialise any date pickers
            });

            $(document).ready(function () {
                $("#statusYes").attr("checked", "checked");
                $("#TrackerYes").attr("checked", "checked");
            });

            var basePath = '@System.Configuration.ConfigurationManager.AppSettings["BasePath"]'
        </script>
    }
