@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN CONTENT -->
<div id="content" data-ng-app="AgileApp" data-ng-controller="ContactController">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-flag"></i>
                Add Contact
                <span>
                    >
                    Manage
                </span>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

        </div>
    </div>
    <div id="MessageArea" class="alert alert-block {{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>

    <section id="widget-grid" class="" ng-init="GetProjectDashboard()">
        <!-- START ROW -->
        <div class="row">
            <div class="col-md-12">
                <!-- NEW COL START -->
                <article class="col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-deletebutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-check"></i> </span>
                            <h2>Add New Contact </h2>
                        </header>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                <form id="contact-form" class="smart-form" novalidate="novalidate">

                                    <div class="panel">
                                        <fieldset>
                                            <div class="row">
                                                <section class="col col-4">
                                                    <label class="input">
                                                        <i class="icon-prepend fa fa-check-circle"></i>
                                                        @*<input type="text" class="form-control" ng-model="project.ProjectTitle" placeholder="Enter project title..." id="txtPName" />*@
                                                        <select id="SelLoanType" ng-model="Contact.ProjectTitle" class="text-box" style="color:black;">
                                                            <option data-ng-repeat="re in ProjectList" value="{{re.ProjectTitle}}">{{re.ProjectTitle}}</option>
                                                        </select>
                                                    </label>
                                                </section>
                                                <section class="col col-4">
                                                    <label class="input">
                                                        <i class="icon-prepend fa fa-check-circle"></i>
                                                        Company Name:<br />
                                                        <input type="text" class="form-control" ng-model="Contact.CompanyName" placeholder="Enter Company Name.." id="txtCompanyName" />
                                                    </label>
                                                </section>
                                                <section class="col col-4">
                                                    <label class="input">
                                                        <i class="icon-prepend fa fa-check-circle"></i>
                                                        Skype-ID:<br />
                                                        <input type="text" class="form-control" ng-model="Contact.SkypeID" placeholder="Enter Skype-ID..." id="txtSkypeID" />
                                                    </label>
                                                </section>
                                            </div>

                                            <div class="row">
                                                <section class="col col-6">
                                                    <label class="textarea">
                                                        <i class="icon-prepend fa fa-check-circle"></i>
                                                        Address:<br />
                                                        <textarea class="form-control" rows="3" ng-model="Contact.ContactADDRESS" placeholder="Enter Address.." id="txtAddress"></textarea>
                                                    </label>
                                                </section>
                                                <section class="col col-6">
                                                    <label class="textarea">
                                                        <i class="icon-prepend fa fa-check-circle"></i>
                                                        Email ID:<br />
                                                        <textarea class="form-control" rows="3" ng-model="Contact.EmailID" placeholder="Enter Email-ID..." id="txtEmailID"></textarea>
                                                    </label>
                                                </section>
                                            </div>
                                            <div class="row">
                                                <section class="col col-6">
                                                    <label class="textarea">
                                                        <i class="icon-prepend fa fa-check-circle"></i>
                                                        Person Name and Contact Number:<br />
                                                        <textarea class="form-control custom-control" rows="3" ng-model="Contact.ContactPersonNo" placeholder="Enter Contact Person Name And Number..." id="txtContactPersonNo"></textarea>
                                                    </label>
                                                </section>
                                            </div>
                                        </fieldset>
                                        <footer>
                                            <button type="submit" data-ng-click="AddConact()" class="btn btn-primary">
                                                Save
                                            </button>
                                        </footer>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>
</div>
@section pagespecific {
    <script src="~/AgController/Contactjs.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // START AND FINISH DATE
            $('#datepicker').datepicker({
                dateFormat: 'dd/mm/yy',
                prevText: '<i class="fa fa-chevron-left"></i>',
                nextText: '<i class="fa fa-chevron-right"></i>',
                onSelect: function (selectedDate) {
                    $('#datepickerEnd').datepicker('option', 'minDate', selectedDate);
                }
            });

            $('#datepickerEnd').datepicker({
                dateFormat: 'dd/mm/yy',
                prevText: '<i class="fa fa-chevron-left"></i>',
                nextText: '<i class="fa fa-chevron-right"></i>',
                onSelect: function (selectedDate) {
                    $('#datepicker').datepicker('option', 'maxDate', selectedDate);
                }
            });
            $('#datepickerDeadLine').datepicker({
                dateFormat: 'dd/mm/yy',
                prevText: '<i class="fa fa-chevron-left"></i>',
                nextText: '<i class="fa fa-chevron-right"></i>',
                onSelect: function (selectedDate) {
                    $('#datepickerEnd').datepicker('option', 'maxDate', selectedDate);
                }
            });
        })

        //$('#datepicker').datepicker().on('changeDate', function () {
        //    $(this).blur(); //Initialise any date pickers
        //});
        //$('#datepickerEnd').datepicker().on('changeDate', function () {
        //    $(this).blur(); //Initialise any date pickers
        //});

        $(document).ready(function () {
            $("#statusYes").attr("checked", "checked");
            $("#TrackerYes").attr("checked", "checked");
        });
        var basePath = '@System.Configuration.ConfigurationManager.AppSettings["BasePath"]'
    </script>
}




